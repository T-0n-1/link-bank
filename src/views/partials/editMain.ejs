<main class="main">
  <section>
    <h2><%= editable.id ? "Edit Link" : "Add New Link" %></h2>
    <form
      class="edit-form"
      id="editForm"
      onsubmit="<%= editable.id ? 'submitEdit(event)' : 'submitNew(event)' %>"
    >
      <% if (editable.id) { %>
        <input type="hidden" id="editId" value="<%= editable.id %>" />
      <% } %>
      <label>
        Link Text:
        <input
          type="text"
          id="editText"
          required
          maxlength="255"
          value="<%= editable.linkName %>"
        />
      </label>
      <label>
        Link URL:
        <input
          type="url"
          id="editUrl"
          required
          maxlength="2048"
          value="<%= editable.link %>"
        />
      </label>
      <label>
        Link Description:
        <textarea
          id="editDescription"
          rows="3"
          maxlength="2048"
        ><%= editable.description %></textarea>
      </label>
      <button type="submit"><%= editable.id ? "Save Changes" : "Add Link" %></button>
      <button type="button" onclick="cancelEdit()">Cancel</button>
    </form>
  </section>
</main>
